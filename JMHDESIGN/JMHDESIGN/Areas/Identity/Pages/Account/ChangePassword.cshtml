@page
@model ChangePasswordModel
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Mudar Password";
}

<h2>@ViewData["Title"]</h2>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="row">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="form-group" hidden>
                    <input asp-for="Input.UserId" class="form-control" hidden value="@UserManager.GetUserId(User)" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.ActualPassword"></label>
                    <input asp-for="Input.ActualPassword" class="form-control" />
                    <span asp-validation-for="Input.ActualPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-right">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}